@model Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "Игра: Оформление заказа";
}
<h2>Оформить заказ сейчас</h2>
<p>Пожалуйста, введите ваши контактные данные и мы сразу привезем вам товар</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <h3>Данные</h3>
    <div class="form-control">
        <label>Ваше имя:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>

    <h3>Адрес доставки</h3>
    foreach (var prop in ViewData.ModelMetadata.Properties)
    {
        if (prop.PropertyName != "Name" &&
            prop.PropertyName != "GiftWrap")
        {
            <div class="form-control">
                <label>@(prop.DisplayName ?? prop.PropertyName)</label>
            @Html.TextBox(prop.PropertyName, null, new
                {
                    @class = "form-control"
                })
            </div>
        }
    }
    @*<div class="form-control">
        <label>Первый адрес:</label>
        @Html.TextBoxFor(x => x.Line1, new { @class = "form-control" })
    </div>
    <div class="form-control">
        <label>Второй адрес:</label>
        @Html.TextBoxFor(x => x.Line2, new { @class = "form-control" })
    </div>
    <div class="form-control">
        <label>Третий адрес:</label>
        @Html.TextBoxFor(x => x.Line3, new { @class = "form-control" })
    </div>
    <div class="form-control">
        <label>Город:</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-control">
        <label>Страна:</label>
        @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
    </div>*@

    <h3>Опции</h3>
    <div class="form-check">
        <label>
            @Html.EditorFor(x=> x.GiftWrap)
            Использовать подрочную упаковку?
        </label>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Обработать заказ"/>
    </div>
}
